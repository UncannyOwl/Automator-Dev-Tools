{
    "name": "uncanny-owl/automator-dev-tools",
    "description": "Centralized development tools for Uncanny Automator plugins",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Uncanny Automator",
            "email": "support@uncannyautomator.com"
        }
    ],
    "require": {
        "composer-plugin-api": "^2.0"
    },
    "require-dev": {
        "symfony/string": "^5",
        "lucatume/wp-browser": "^3.2.3",
        "codeception/module-asserts": "^1.0",
        "codeception/module-phpbrowser": "^1.0",
        "codeception/module-webdriver": "^1.0",
        "codeception/module-db": "^1.0",
        "codeception/module-filesystem": "^1.0",
        "codeception/module-cli": "^1.0",
        "codeception/util-universalframework": "^1.0",
        "vlucas/phpdotenv": "^5.3",
        "uocs/uncanny-owl-coding-standards": "dev-main"
    },
    "config": {
        "sort-packages": false,
        "optimize-autoloader": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "unit-tests": "php ./vendor/bin/codecept run wpunit --skip-group Full_Coverage",
        "unit-tests-full": "php ./vendor/bin/codecept run wpunit",
        "unit-tests:coverage": "php ./vendor/bin/codecept run wpunit --coverage --coverage-html --xml",
        "phpcs": "./vendor/bin/phpcs -s --standard=Uncanny-Automator --warning-severity=1",
        "phpcsOnSave": "./vendor/bin/phpcs -s -v --standard=Uncanny-Automator --warning-severity=1 --report=full",
        "phpcbf": "./vendor/bin/phpcbf -s --standard=Uncanny-Automator",
        "phpcs:pr": "FILES=$(git diff --name-only origin/pre-release... | grep '\\.php$' || true) && [ -n \"$FILES\" ] && composer phpcs -- $FILES || echo 'No PHP files to lint.'",
        "phpcbf:pr": "FILES=$(git diff --name-only origin/pre-release... | grep '\\.php$' || true) && [ -n \"$FILES\" ] && composer phpcbf -- $FILES || echo 'No PHP files to fix.'"
    },
    "autoload": {
        "psr-4": {
            "UncannyOwl\\AutomatorDevTools\\": "src/"
        }
    },
    "extra": {
        "class": "UncannyOwl\\AutomatorDevTools\\DevToolsPlugin"
    }
} 